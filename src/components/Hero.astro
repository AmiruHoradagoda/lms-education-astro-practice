---
// Hero.astro
export interface Props {
  title?: string;
  subtitle?: string;
  backgroundImage?: string;
}

const {
  title = "LMS EDUCATION",
  subtitle = "BTemplates, the best place for Blogger templates.",
  backgroundImage = "/hero-background.png",
} = Astro.props;

const [firstWord, ...restWords] = title.split(" ");
const secondWord = restWords.join(" ");
---

<div class="hero-container" style={`background-image: url(${backgroundImage})`}>
  <div class="hero-text-container">
    <h1>
      <span class="first-word">{firstWord}</span>
      <span class="second-word">{secondWord}</span>
    </h1>
    <p>{subtitle}</p>
  </div>
</div>

<style>
  .hero-container {
    width: 100%;
    height: 90vh;
    background-size: contain;
    background-position: center center;
    background-repeat: no-repeat;
    display: flex;
    align-items: center;
    justify-content: flex-end;
    padding: 2rem;
  }

  .hero-text-container {
    background-color: rgba(255, 255, 255, 0.9);
    padding: 2rem;
    border-radius: 10px;
    max-width: 500px;
    opacity: 0.8;
    margin-right: 2rem;
  }

  .hero-text-container h1 {
    margin: 0 0 1rem 0;
    font-size: 3rem;
    font-weight: bold;
    line-height: 1.2;
  }

  .hero-text-container p {
    margin: 0;
    font-size: 1.2rem;
    color: #666;
    font-weight: normal;
  }

  .first-word {
    color: #1abc9c;
    margin-right: 10px;
  }

  .second-word {
    color: #95a5a6;
  }

  @media (max-width: 768px) {
    .hero-container {
      justify-content: center;
      height: 70vh;
      padding: 1rem;
    }

    .hero-text-container {
      margin-right: 0;
      max-width: 100%;
    }

    .hero-text-container h1 {
      font-size: 2rem;
    }

    .hero-text-container p {
      font-size: 1rem;
    }
  }
</style>
