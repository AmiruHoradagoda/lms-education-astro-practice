---
// ColorfulGrid.astro
const gridItems = [
  { text: "Courses", color: "#2c5aa0" },
  { text: "Template tour", color: "#4ecdc4" },
  { text: "Download", color: "#c0504d" },
  { text: "Documentation", color: "#b85450" },
  { text: "Campus", color: "#f4b942" },
  { text: "Contact us", color: "#f39c12" },
];
---

<div class="grid-container">
  {
    gridItems.map((item) => (
      <div class="container" style={`background-color: ${item.color}`}>
        <p class="text">{item.text}</p>
      </div>
    ))
  }
</div>

<style>
  .grid-container {
    display: grid;
    grid-template-columns: repeat(6, 1fr);
    width: 100%;
    height: 200px;
  }

  .container {
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    transition:
      transform 0.3s ease,
      box-shadow 0.3s ease;
    cursor: pointer;
  }

  .container:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
  }

  .text {
    font-family: Arial, sans-serif;
    font-size: 1.1rem;
    font-weight: 500;
    color: white;
    margin: 0;
    text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.3);
  }

  @media (max-width: 768px) {
    .grid-container {
      grid-template-columns: repeat(3, 1fr);
      height: 400px;
    }

    .text {
      font-size: 0.9rem;
    }
  }

  @media (max-width: 480px) {
    .grid-container {
      grid-template-columns: repeat(2, 1fr);
      height: 600px;
    }

    .text {
      font-size: 0.8rem;
    }
  }
</style>
