<style>
  .footer {
    background: linear-gradient(135deg, #2c3e50, #34495e);
    color: white;
    padding: 3rem 2rem 2rem 2rem;
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto,
      sans-serif;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .footer-columns {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 3rem;
    margin-bottom: 2rem;
  }

  .footer-column {
    min-height: 300px;
  }

  .column-title {
    font-size: 1.3rem;
    font-weight: 600;
    margin: 0 0 1.5rem 0;
    color: white;
    position: relative;
    padding-bottom: 0.5rem;
  }

  .column-title::after {
    content: "";
    position: absolute;
    bottom: 0;
    left: 0;
    width: 50px;
    height: 2px;
    background: #f39c12;
  }

  .post-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .post-item {
    display: flex;
    gap: 0.75rem;
    align-items: flex-start;
  }

  .post-image {
    flex-shrink: 0;
    width: 60px;
    height: 45px;
    border-radius: 4px;
    overflow: hidden;
  }

  .post-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .post-content {
    flex: 1;
  }

  .post-title {
    font-size: 0.85rem;
    font-weight: 500;
    color: #ecf0f1;
    margin: 0 0 0.25rem 0;
    line-height: 1.3;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .post-date {
    font-size: 0.75rem;
    color: #bdc3c7;
  }

  .comment-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .comment-item {
    display: flex;
    gap: 0.75rem;
    align-items: flex-start;
  }

  .comment-avatar {
    flex-shrink: 0;
    width: 35px;
    height: 35px;
    border-radius: 50%;
    background: #f39c12;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .avatar-icon {
    font-size: 0.75rem;
    font-weight: bold;
    color: white;
  }

  .comment-content {
    flex: 1;
  }

  .comment-author {
    font-size: 0.8rem;
    font-weight: 600;
    color: #ecf0f1;
    margin-bottom: 0.25rem;
  }

  .comment-text {
    font-size: 0.8rem;
    color: #bdc3c7;
    line-height: 1.3;
    margin-bottom: 0.25rem;
  }

  .comment-date {
    font-size: 0.7rem;
    color: #95a5a6;
  }

  .categories-grid {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 2rem;
  }

  .category-tag {
    display: inline-block;
    padding: 0.3rem 0.8rem;
    border-radius: 15px;
    font-size: 0.75rem;
    font-weight: 500;
    color: white;
    text-decoration: none;
    transition: opacity 0.3s ease;
  }

  .category-tag:hover {
    opacity: 0.8;
  }

  .about-title {
    margin-top: 1.5rem;
  }

  .about-text {
    font-size: 0.85rem;
    line-height: 1.5;
    color: #bdc3c7;
    margin: 0 0 1.5rem 0;
  }

  .logo-container {
    display: flex;
    justify-content: flex-start;
  }

  .footer-logo {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .logo-icon {
    font-size: 1.5rem;
  }

  .logo-text {
    font-size: 1rem;
    font-weight: 600;
    color: #3498db;
  }

  .archive-section {
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    padding-top: 1.5rem;
  }

  .archive-list {
    display: flex;
    flex-wrap: wrap;
    gap: 1.5rem;
  }

  .archive-item {
    font-size: 0.9rem;
    color: #ecf0f1;
  }

  .archive-count {
    color: #bdc3c7;
  }

